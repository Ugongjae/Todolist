<html>
	<head>
		<title>Gongjae's Todolist</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<!--[if lte IE 8]><script src="js/html5shiv.js"></script><![endif]-->
		<script src="js/jquery.min.js"></script>
		<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
		<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
		<script src="js/jquery.cookie.js"></script>
		<script src="js/skel.min.js"></script>
		<script src="js/skel-layers.min.js"></script>
		<script src="js/init.js"></script>
		<script src="js/insert.js"></script>
		<noscript>
			<link rel="stylesheet" href="css/skel.css" />
			<link rel="stylesheet" href="css/style.css" />
			<link rel="stylesheet" href="css/style-xlarge.css" />
		</noscript>
	</head>
	<body id="top">
		<!-- error -->
		<%
			if(err==-1){
		%>
				<script>alert('유효하지 않은 입력값입니다.');</script>
		<%
			}
		%>
		
		<!-- Banner -->
			<section id="banner">
				<div class="inner">
					<h2>Todo List</h2>
					
					<ul class="actions">
						<li><a class="button special big alt"></a></li>
						<li><a class="button big alt" >Append</a></li>
					</ul>
				</div>
			</section>

		<!-- One -->
			<section id="one" class="wrapper style1">
				<header class="major hide" id="toogle">
						<form method="POST" action="/insert-post">
							<input type="text" class="insert-title" id="insert-title" placeholder="Title" maxlength="500" name="insert_title">
							<textarea class="insert-content" id="insert-content" placeholder="Content" maxlength="5000" name="insert_content"></textarea>
							<div class="div-priority">
								<input type="radio" class="insert-priority" name="insert_priority" checked value="1" id="radio1"><label for="radio1">우선순위1</label>
								<input type="radio" class="insert-priority" name="insert_priority" value="2" id="radio2"><label for="radio2">우선순위2</label>
								<input type="radio" class="insert-priority" name="insert_priority" value="3" id="radio3"><label for="radio3">우선순위3</label>
								<input type="radio" class="insert-priority" name="insert_priority" value="4" id="radio4"><label for="radio4">우선순위4</label>
							</div>
							<div class="div-date">
								<input type="data" name="end_date" id="end-date" size="12" class="data-select"/>
							</div>
							<button class="button" id="insert-submit">추가하기</button>
						</form>
				</header>
				<div class="container">
					<div class="row">
						<%
							for(var i=0;i<result.length;i++){	
						%>
							<div class="4u">
							<%
								if(result[i].date<today){
							%>
								<section class="special box red">
							<%
								}else{
							%>
								<section class="special box">
							<%
								}
							%>
									<i class="icon major priority<%=result[i].priority%> blank_<%=result[i].blank%>"></i>
									<h3 class="h3-title"><%=result[i].title%></h3>
									<pre class="p-content"><%=result[i].content%></pre>
									<%
										if(result[i].date=='9999-12-31'){
									%>
									<p class="p-date">마감기한없음</p>
									<%
										}
										else{
									%>
									<p class="p-date"><%=result[i].date%></p>
									<%
										}
									%>
									<div class="div-buttons">
										<input type="hidden" class="hidden-id" value="<%=result[i].id%>">
										<input type="hidden" class="hidden-priority" value="<%=result[i].priority%>">
										<input type="button" class="delete button inline redbtn" value="삭제">
										<input type="button" class="modify button inline" value="변경">
									</div>
								</section>
							</div>
						<%}%>
						
					</div>
				</div>
			</section>
		<!-- Modal -->
		<section class="modal">
			<div class="modal-div">
			<form class="modify-form" method="POST" action="/modify-post">
				<input type='hidden' name="id" class="modify-id">
							<input type="text" class="modify-title" id="modify-title" placeholder="Title" maxlength="500" name="modify_title">
							<textarea class="modify-content" id="modify-content" placeholder="Content" maxlength="5000" name="modify_content"></textarea>
							<div class="div-priority">
								<input type="radio" class="modify-priority" name="modify_priority" value="1" id="radio5"><label for="radio5">우선순위1</label>
								<input type="radio" class="modify-priority" name="modify_priority" value="2" id="radio6"><label for="radio6">우선순위2</label>
								<input type="radio" class="modify-priority" name="modify_priority" value="3" id="radio7"><label for="radio7">우선순위3</label>
								<input type="radio" class="modify-priority" name="modify_priority" value="4" id="radio8"><label for="radio8">우선순위4</label>
							</div>
							<div class="div-date">
								<input type="data" name="modify_end_date" id="modify-end-date" size="12" class="modify-data-select"/>
							</div>
							<input type="reset" class="cancel button inline redbtn" value="취소">
							<button class="ok button inline">변경</button>
						</form>
			</div>
			</section>

		<!-- Footer -->
			<footer id="footer">
				<div class="container">
					
					<ul class="copyright">
						<li>&copy; Untitled. All rights reserved.</li>
						<li>Design: <a href="http://templated.co">TEMPLATED</a></li>
						<li>Images: <a href="http://unsplash.com">Unsplash</a></li>
					</ul>
				</div>
			</footer>

	</body>
</html>